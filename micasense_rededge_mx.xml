            <options>
                <option name="1" value="1" />
                <option name="2" value="2" />
                <option name="4" value="4" />
                <option name="8" value="8" />
            </options>
        </parameter>
        <parameter name="CAM_EXPOSURE_GAIN5" type="int8" default="1">
            <description>Camera 5 Manual Exposure Gain</description>
            <options>
                <option name="1" value="1" />
                <option name="2" value="2" />
                <option name="4" value="4" />
                <option name="8" value="8" />
            </options>
        </parameter>
        <parameter name="CAM_ORIENTATION_AC_PHI" type="float" default="0.0">
            <description>Aircraft Phi (Roll) Orientation in Radians</description>
        </parameter>
        <parameter name="CAM_ORIENTATION_AC_THETA" type="float" default="0.0">
            <description>Aircraft Theta (Pitch) Orientation in Radians</description>
        </parameter>
        <parameter name="CAM_ORIENTATION_AC_PSI" type="float" default="0.0">
            <description>Aircraft Psi (Yaw) Orientation in Radians</description>
        </parameter>
        <parameter name="CAM_ORIENTATION_CAM_PHI" type="float" default="0.0">
            <description>Camera Phi (Roll) Orientation in Radians</description>
        </parameter>
        <parameter name="CAM_ORIENTATION_CAM_THETA" type="float" default="0.0">
            <description>Camera Theta (Pitch) Orientation in Radians</description>
        </parameter>
        <parameter name="CAM_ORIENTATION_CAM_PSI" type="float" default="0.0">
            <description>Camera Psi (Yaw) Orientation in Radians</description>
        </parameter>
        <parameter name="CAM_ALTITUDE" type="float", default="0.0">
            <description>Aircraft altitude AGL (meters)</description>
        </parameter>
        <parameter name="CAM_ALONG_TRACK_OVERLAP" type="float", default="70.0">
            <description>Desired along track overlap percentage</description>
        </parameter>
        <parameter name="CAM_CROSS_TRACK_OVERLAP" type="float", default="70.0">
            <description>Desired cross track overlap percentage</description>
        </parameter>
        <parameter name="CAM_AUTO_CAPTURE_MODE" type="uint8", default="0">
            <description>Auto capture mode.</description>
            <options>
                <option name="disabled", value="0" />
                <option name="overlap", value="1" />
                <option name="timer", value="2" />
                <option name="ext", value="3" />
            </options>
        </parameter>
        <parameter name="CAM_AUTO_CAPTURE_TIMER" type="uint32", default="2">
            <description>When in timer auto capture mode, the time in seconds between captures.</description>
        </parameter>
        <parameter name="CAM_AUTO_CAPTURE_EXT_TRIGGER_MODE" type="uint8", default="0">
            <description>When in ext auto capture mode, the trigger mode for external camera capture triggers.</description>
            <options>
                <option name="rising", value="0" />
                <option name="falling", value="1" />
                <option name="longpwm", value="2" />
                <option name="shortpwm", value="3" />
            </options>
        </parameter>
        <parameter name="CAM_AUTO_CAPTURE_EXT_TRIGGER_THRESHOLD" type="uint32", default="2">
            <description>When in timer auto capture mode, the time in seconds between captures.</description>
        </parameter>
        <parameter name="CAM_RAW_FORMAT" type="uint8", default="0">
            <description>When capturing images in RAW, the desired mode to output them as.</description>
            <options>
                <option name="DNG" value="0" />
                <option name="TIFF" value="1" />
            </options>
        </parameter>
        <parameter name="CAM_AGC_MIN_MEAN" type="float", default="0.0">
            <description>Sets the minimum normalized mean value for each image during Automatic Gain Control (AGC).  Valid values are from 0.0 to 1.0, inclusive.</description>
        </parameter>
    </parameters>
