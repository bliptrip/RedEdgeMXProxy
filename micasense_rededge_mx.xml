<?xml version="1.0" encoding="UTF-8" ?>
<mavlinkcamera>
    <definition version="7">
        <model>RedEdge MX</model>
        <vendor>MicaSense</vendor>
    </definition>
    <parameters>
        <!-- control = 0 tells us this should not create an automatic UI control -->
        <parameter name="CAM_EXPOSURE_MANUAL" type="bool", default="0">
            <description>Enable/Disable Manual Camera Exposure</description>
            <options>
                <option name="Disable", value="0">
                    <exclusions>
                        <exclude>CAM_EXPOSURE1</exclude>
                        <exclude>CAM_EXPOSURE2</exclude>
                        <exclude>CAM_EXPOSURE3</exclude>
                        <exclude>CAM_EXPOSURE4</exclude>
                        <exclude>CAM_EXPOSURE5</exclude>
                        <exclude>CAM_EXPOSURE_GAIN1</exclude>
                        <exclude>CAM_EXPOSURE_GAIN2</exclude>
                        <exclude>CAM_EXPOSURE_GAIN3</exclude>
                        <exclude>CAM_EXPOSURE_GAIN4</exclude>
                        <exclude>CAM_EXPOSURE_GAIN5</exclude>
                    </exclusions>
                </option>
                <option name="Enable", value="1" />
            </options>
        </parameter>
        <parameter name="CAM_DETECT_PANEL" type="bool" default="False">
            <description>Autodetect the calibration panel in the captured image.</description>
        </parameter>
        <parameter name="CAM_EXPOSURE1" type="float" default="1.0">
            <description>Camera 1 Manual Exposure (ms)</description>
        </parameter>
        <parameter name="CAM_EXPOSURE2" type="float" default="1.0">

        </parameter>
        <parameter name="CAM_EXPOSURE3" type="float" default="1.0">

        </parameter>
        <parameter name="CAM_EXPOSURE4" type="float" default="1.0">

        </parameter>
        <parameter name="CAM_EXPOSURE5" type="float" default="1.0">

        </parameter>
        <parameter name="CAM_EXPOSURE_GAIN1" type="int8" default="1">
            <description>Camera 1 Manual Exposure Gain</description>
            <options>
                <option name="1" value="1" />
                <option name="2" value="2" />
                <option name="4" value="4" />
                <option name="8" value="8" />
            </options>
        </parameter>
        <parameter name="CAM_EXPOSURE_GAIN2" type="int8" default="1">
            <description>Camera 2 Manual Exposure Gain</description>
            <options>
                <option name="1" value="1" />
                <option name="2" value="2" />
                <option name="4" value="4" />
                <option name="8" value="8" />
            </options>
        </parameter>
        <parameter name="CAM_EXPOSURE_GAIN3" type="int8" default="1">
            <description>Camera 3 Manual Exposure Gain</description>
            <options>
                <option name="1" value="1" />
                <option name="2" value="2" />
                <option name="4" value="4" />
